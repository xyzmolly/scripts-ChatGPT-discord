npm install discord.js
Create index.js
js
const { Client, GatewayIntentBits, Partials, EmbedBuilder, ActionRowBuilder, ButtonBuilder, ButtonStyle } = require('discord.js');
const client = new Client({
    intents: [
        GatewayIntentBits.Guilds,
        GatewayIntentBits.GuildMembers
    ],
    partials: [Partials.Channel]
});

// ğŸš¨ Never share your bot token!
client.login('YOUR_BOT_TOKEN_HERE');

client.once('ready', () => {
    console.log(`Logged in as ${client.user.tag}`);
});

// Slash command: /verify-panel
client.on('interactionCreate', async interaction => {
    if (!interaction.isChatInputCommand()) return;

    if (interaction.commandName === 'verify-panel') {
        const embed = new EmbedBuilder()
            .setTitle('ğŸ”’ Server Verification')
            .setDescription('Click the button below to verify and get access to the server.')
            .setColor('#00ff00');

        const button = new ButtonBuilder()
            .setCustomId('verify')
            .setLabel('Verify')
            .setStyle(ButtonStyle.Success);

        await interaction.reply({ embeds: [embed], components: [new ActionRowBuilder().addComponents(button)] });
    }
});

// Handle button press
client.on('interactionCreate', async interaction => {
    if (!interaction.isButton()) return;

    if (interaction.customId === 'verify') {
        const role = interaction.guild.roles.cache.find(r => r.name === 'Verified');

        if (!role) return interaction.reply({ content: 'âŒ Verified role not found!', ephemeral: true });

        await interaction.member.roles.add(role);

        await interaction.reply({ content: 'âœ… You are now verified!', ephemeral: true });
    }
});
